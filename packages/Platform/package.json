{
  "name": "@evonext/platform",
  "version": "25.11.22",
  "description": "Platform library for EvoNext",
  "author": "EvoNext Team",
  "license": "MIT",
  "main": "./dist/evonext-platform.js",
  "module": "./dist/evonext-platform.min.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/evonext-platform.min.mjs",
      "require": "./dist/evonext-platform.js"
    },
    "./evonext-platform.js": "./dist/evonext-platform.js",
    "./evonext-platform.min.js": "./dist/evonext-platform.min.js",
    "./evonext-platform.min.mjs": "./dist/evonext-platform.min.mjs",
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "npm run build:clean && npm run build:base && npm run build:minified",
    "build:clean": "rm -rf dist",
    "build:base": "tsup src/index.ts --format cjs,esm --dts",
    "build:minified": "esbuild dist/index.js --bundle --minify --sourcemap --format=iife --global-name=EvoNext --outfile=dist/evonext-platform.min.js && esbuild dist/index.mjs --bundle --minify --sourcemap --format=esm --outfile=dist/evonext-platform.min.mjs",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "npm run lint -- --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "npm run build",
    "prepare": "husky install"
  },
  "dependencies": {
    "@nexajs/crypto": "24.9.5",
    "@nexajs/utils": "24.7.15",
    "dash-platform-sdk": "1.3.0-dev.10",
    "pshenmic-dpp": "1.1.0-dev.7"
  },
  "devDependencies": {
    "@types/node": "24.10.1",
    "@vitest/coverage-v8": "2.1.3",
    "esbuild": "0.27.0",
    "eslint": "9.11.1",
    "husky": "9.1.7",
    "jsdom": "25.0.1",
    "prettier": "3.3.3",
    "tsup": "8.5.1",
    "tsx": "4.20.6",
    "typescript": "5.9.3",
    "vitest": "2.1.9"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sansbankdao/evonext-js.git",
    "directory": "packages/platform"
  }
}
